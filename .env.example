# ---- Runtime ----
SPRING_PROFILES_ACTIVE=prod
APP_PORT=8080
TZ=Asia/Shanghai
BASE_REGISTRY=docker.m.daocloud.io/library
MYSQL_IMAGE=docker.m.daocloud.io/library/mysql:8.0.37

# ---- Database ----
DB_NAME=synji_calendar
DB_USERNAME=synji
DB_PASSWORD=change_this_db_password
DB_ROOT_PASSWORD=change_this_root_password

# ---- JPA / SQL ----
# Production recommended: validate (do not auto change schema)
JPA_DDL_AUTO=validate
# You said internal testing logs can stay on.
JPA_SHOW_SQL=true

# ---- AI ----
SILICON_API_KEY=replace_with_real_silicon_api_key
AI_BASE_URL=https://api.siliconflow.cn/v1
AI_MODEL_NAME=Qwen/Qwen2.5-7B-Instruct
AI_TIMEOUT=PT60S

# ---- CORS ----
# Multiple origins: comma separated
APP_CORS_ALLOWED_ORIGIN_PATTERNS=https://your-frontend-domain.com

# ---- Internal test behavior ----
# Prod recommended false. For internal test you can set true.
APP_AUTH_RETURN_VERIFY_CODE=false

# ---- SMS (Spug) ----
# Keep disabled during internal testing unless you configure a valid token path.
APP_SMS_ENABLED=false
APP_SMS_BASE_URL=https://push.spug.cc
APP_SMS_SEND_PATH=/send/REPLACE_WITH_YOUR_TOKEN
APP_SMS_NAME=讯极日历
